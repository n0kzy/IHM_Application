<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAE2._01.profil"
             Title="NewPage1"
             xmlns:local="clr-namespace:SAE2._01"
             Style="{StaticResource MyTrigger}">
    <VerticalStackLayout>
        <Label 
            Text="Profil"
            VerticalOptions="Center" 
            FontSize="32"
            HorizontalOptions="Center"
            TextColor="Black"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="200" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1200" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
           
            <Image 
                Source="profil.jpg"
                VerticalOptions="Start"
                HorizontalOptions="Start"
                Grid.Column="0"
                Grid.Row="0"
                HeightRequest="400"
                />

            <Frame Grid.Column="1" Grid.Row="0" Padding="30">
                <Label Text="Pseudo" FontSize="32" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>
            <Frame Grid.Column="1" Grid.Row="1" Padding="10">
                <Label Text="mot de passe" FontSize="32" HorizontalOptions="Center" VerticalOptions="Center" />
            </Frame>
        </Grid>
    </VerticalStackLayout>
</ContentPage>