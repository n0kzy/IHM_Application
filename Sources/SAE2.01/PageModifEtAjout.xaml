<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAE2._01.ModifierPersonnagePage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Modifier le personnage" FontSize="20" FontAttributes="Bold" Margin="10" />
            <Entry x:Name="NameEntry" Placeholder="Nom Personnage (seulement pour l'ajout)" Margin="10" />
            <Entry x:Name="PoidsEntry" Placeholder="Poids" Margin="10" />
            <Entry x:Name="Role1Entry" Placeholder="Role 1" Margin="10" />
            <Entry x:Name="Role2Entry" Placeholder="Role 2" Margin="10" />
            <Entry x:Name="histoireEntry" Placeholder="Histoire" Margin="10" />
            <Entry x:Name="ImageEntry" Placeholder="Image" Margin="10" />
            <Entry x:Name="Comp1Nom" Placeholder="Nom compétence 1" Margin="10" />
            <Entry x:Name="Description1" Placeholder="Description compétence 1" Margin="10" />
            <Entry x:Name="TypeComp1" Placeholder="Type compétence 1" Margin="10" />
            <Entry x:Name="Comp2Nom" Placeholder="Nom compétence 2" Margin="10" />
            <Entry x:Name="Description2" Placeholder="Description compétence 2" Margin="10" />
            <Entry x:Name="TypeComp2" Placeholder="Type compétence 2" Margin="10" />
            <Entry x:Name="Comp3Nom" Placeholder="Nom compétence 3" Margin="10" />
            <Entry x:Name="Description3" Placeholder="Description compétence 3" Margin="10" />
            <Entry x:Name="TypeComp3" Placeholder="Type compétence 3" Margin="10" />
            <Entry x:Name="Comp4Nom" Placeholder="Nom compétence 4" Margin="10" />
            <Entry x:Name="Description4" Placeholder="Description compétence 4" Margin="10" />
            <Entry x:Name="TypeComp4" Placeholder="Type compétence 4" Margin="10" />
            <Entry x:Name="Comp5Nom" Placeholder="Nom compétence 5" Margin="10" />
            <Entry x:Name="Description5" Placeholder="Description compétence 5" Margin="10" />
            <Entry x:Name="TypeComp5" Placeholder="Type compétence 5" Margin="10" />

            <Button Text="Modifier" Clicked="EnregistrerButton_Clicked" Margin="10" />
            <Button Text="Ajouter" Clicked="AjouterButton_Clicked" Margin="10" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
