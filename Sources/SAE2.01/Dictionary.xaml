<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAE2._01.Dictionary1"
             xmlns:local="clr-namespace:SAE2._01"
                    >
    
    <Color x:Key="PrimaryColor">#FF595E</Color>
    <Color x:Key="SecondaryColor">#FFCA3A</Color>
    <Color x:Key="AccentColor">#8AC926</Color>

    <Style TargetType="Label" x:Key="Lab">
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style TargetType="Button" x:Key="But">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="Padding" Value="30"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="WidthRequest" Value="500" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style TargetType="Image" x:Key="Im">
        <Setter Property="HeightRequest" Value="200"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style TargetType="Entry" x:Key="Ent">
        <Setter Property="WidthRequest" Value="200" />
        <Setter Property="HeightRequest" Value="30" />
        <Setter Property="BackgroundColor" Value="Grey" />
    </Style>

    <Style TargetType="Image" x:Key="ImPageDuChamp">
        <Setter Property="HeightRequest" Value="500"/>
        <Setter Property="WidthRequest" Value="850"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style TargetType="Image" x:Key="ImEquipement">
        <Setter Property="HeightRequest" Value="150"/>
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style TargetType="Image" x:Key="Rôle">
        <Setter Property="HeightRequest" Value="80"/>
        <Setter Property="WidthRequest" Value="80"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>


    <Style TargetType="local:CustomHeader">
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="Padding" Value="10, 0"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style TargetType="ImageButton" x:Key="Imb">
        <Setter Property="HeightRequest" Value="300"/>
        <Setter Property="WidthRequest" Value="400"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="BackgroundColor" Value="AliceBlue"/>
    </Style>


</ResourceDictionary>
